#!/usr/bin/env bash

set -eo pipefail

zecret="$CODEDIR/teammgmt/bin/zecret"

AWS_ACCESS_KEY_ID="$("$zecret" KEVEL_AWS_ACCESS_KEY_ID)"
export AWS_ACCESS_KEY_ID

AWS_SECRET_ACCESS_KEY="$("$zecret" KEVEL_AWS_SECRET_ACCESS_KEY)"
export AWS_SECRET_ACCESS_KEY

AWS_DEFAULT_REGION="$("$zecret" KEVEL_AWS_DEFAULT_REGION)"
export AWS_DEFAULT_REGION

export AWS_PAGER=""

ADZERK_SLACK_TOKEN="$("$zecret" ADZERK_SLACK_TOKEN)"
export ADZERK_SLACK_TOKEN

CLUBHOUSE_API_TOKEN="$("$zecret" KEVEL_CLUBHOUSE_API_TOKEN)"
export CLUBHOUSE_API_TOKEN

if [[ $# == 0 ]]
then
  "$SHELL" -i
else
  "$@"
fi
